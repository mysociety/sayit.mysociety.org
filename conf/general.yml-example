SAYIT_DB_HOST: 'localhost'
SAYIT_DB_PORT: '5432'
SAYIT_DB_USER: 'sayit'
SAYIT_DB_NAME: 'sayit'
SAYIT_DB_PASS: ''

STAGING: '1'

TIME_ZONE: 'Europe/London'
DJANGO_SECRET_KEY: ''
ALLOWED_HOSTS: []

# For local development, a good choice here is to set BASE_HOST
# to '127.0.0.1.xip.io' and BASE_PORT to 8000
BASE_HOST: '127.0.0.1.xip.io'
BASE_PORT: 8000

DEFAULT_FROM_EMAIL: 'hello@example.org'

# Content formatting
# How many characters of speech text to show
SPEECH_SUMMARY_LENGTH: 30
